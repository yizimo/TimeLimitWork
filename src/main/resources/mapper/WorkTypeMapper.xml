<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zimo.demo.mybatis.dao.WorkTypeMapper">
    <!-- boolean updateWorkTypeById(Integer workId);-->
   <update id="updateWorkTypeById" >
       update work_type set `type` = #{type} where `type` = 1 and  work_id = #{workId} and stu_id = #{stuId}
   </update>

    <update id="updateWorkByWorkId">
        update work_type set `type` = 1 where work_id = #{workId}
    </update>

    <update id="updateWorkByEndTime">
        update work_type set `type` = 3 where work_id = #{workId} and `type` = 1
    </update>

    <!-- WorkType findByWorkIdAndStuId(@Param("workId") Integer workId,
                                  @Param("stuId") Integer stuId); -->
    <select id="findByWorkIdAndStuId" >
        select * from work_type where work_id = #{workId} and stu_id = #{stuId}
    </select>
</mapper>
